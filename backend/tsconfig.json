{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "lib": ["ES2018", "ESNext.AsyncIterable"],
    "target": "ES2018",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
